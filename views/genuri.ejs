<%- include('./partials/top.ejs'); %>

<div class="container">
    <header>
        <%- include('./partials/navbar.ejs', {username: username}); %>
    </header>

    <% for (i=0; i < genuri.length; i++) { %>
      <% if(genuri[i].id_carte.length > 0) {%>
      <h1><%= genuri[i].gen %></h1>
      <% } %>
    <div class="row">
      <% for(k=0; k < 5; k++) { %>
      <% for (j=0; j < carti.length; j++) { %>
        
        <% if(carti[j].id_carte == genuri[i].id_carte[k]) {%>
        <div class="col-xs-5 col-md-3 col-lg-2 py-2">
          <a href="/carte/<%= carti[j].id_carte %>" class="thumbnail">
            <img class="img-fluid" src="/uploads/books/<%= carti[j].coperta %>" alt="coperta-<%= carti[j].id_carte %>">
          </a>
        </div>
        <% } %>
        <% } %>
        <% } %>
        <% if(genuri[i].id_carte.length > 0) {%>
        <div class="col-xs-2 col-md-2 col-lg-2 py-2">
          <a href="/gen/<%= genuri[i].id_gen %>">Mai multe</a>
        </div>
      <% } %>

    </div>
    <% } %>
    
</div>

<%- include('./partials/bottom.ejs'); %>