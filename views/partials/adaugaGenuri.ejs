<div class="row">
    <div class="col-6 py-2">
        <h2>Adăugare genuri</h2>

        <form action="/adaugareGen" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="denumire gen literar" name="gen">
            </div>
            <button class="btn btn-outline-success" type="submit">Adaugă</button>
        </form>
    </div>
    <div class="col-6 py-2">
        <div class="overflow-auto">
            <ul>
            <% for (let i = 0; i < genuri.length; i++) {%>
                <li><%= genuri[i].gen %></li>
            <% } %>
            </ul>
        </div>
    </div>
</div>